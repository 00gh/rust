// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Extension",
      "type": "npm",
      "script": "compile",
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "fileLocation": [
          "relative",
          "${workspaceRoot}/editors/code"
        ]
      },
      "path": "editors/code/"
    },
    {
      "label": "Build Server",
      "type": "shell",
      "command": "cargo build --package ra_lsp_server",
      "problemMatcher": "$rustc"
    },
    {
      "label": "Build All",
      "group": "build",
      "dependsOn": [
        "Build Extension",
        "Build Server"
      ],
      "problemMatcher": []
    },
  ]
}
