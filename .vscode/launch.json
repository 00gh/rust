{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--disable-extensions",
        "--user-data-dir",
        "${workspaceFolder}/target/vscode",
        "--extensionDevelopmentPath=${workspaceFolder}/editors/code"
      ],
      "env": {
        "__RA_LSP_SERVER_DEBUG": "${workspaceFolder}/target/debug/ra_lsp_server"
      },
      "outFiles": [
        "${workspaceFolder}/editors/code/bundle/**/*.js"
      ],
      "preLaunchTask": "Build All"
    },
    {
      "name": "Debug Lsp Server",
      "type": "lldb",
      "request": "attach",
      "program": "${workspaceFolder}/target/debug/ra_lsp_server",
      "pid": "${command:pickMyProcess}",
      "sourceLanguages": [
        "rust"
      ]
    },
  ]
}
